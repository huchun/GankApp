<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="6dp"
    android:paddingRight="6dp"
    android:id="@+id/rl_root"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/itemGrayBg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/girl_pic_trans_shade" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/girl_pic_trans_item" >

       <com.ldoublem.thumbUplib.ThumbUpView
           android:id="@+id/btn_collect2"
           android:layout_width="wrap_content"
           android:layout_height="28dp"
           android:layout_centerVertical="true"
           android:layout_marginLeft="10dp"
           app:bgColor="@color/translate"
           app:cracksColor="@color/translate"
           app:edgeColor="@color/btn_collect_border_color"
           app:fillColor="@color/icon_like_color"
           app:unlikeType="0" />

        <TextView
            android:id="@+id/tvShowTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_collect2"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/girl_pic_trans_item_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>